# =============================================================================
# SmartGrid Home — Backend Environment Variables
# Copy this file to .env and fill in your values
# =============================================================================

# Google Gemini API Key (required for Power Agent)
GOOGLE_API_KEY=your-google-api-key-here

# MongoDB connection
MONGO_URI=mongodb://localhost:27017
MONGO_DB=smartgrid_home

# Server
PORT=8000

# CORS — comma-separated origins (use * for dev)
CORS_ORIGINS=*
